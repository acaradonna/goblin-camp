{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GC: Debug CLI",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/gc_cli",
      "args": ["mapgen"],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "GC: Debug Core Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/deps/gc_core-*",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "GC: Debug TUI",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/gc_tui",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
