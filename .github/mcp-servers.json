{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem"
      ],
      "env": {
        "ALLOWED_DIRECTORIES": "/home/runner/work/goblin-camp/goblin-camp"
      }
    },
    "github": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_API_URL": "https://api.github.com"
      }
    },
    "git": {
      "command": "npx", 
      "args": [
        "@modelcontextprotocol/server-git"
      ],
      "env": {
        "GIT_REPOSITORY_PATH": "/home/runner/work/goblin-camp/goblin-camp"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-sqlite"
      ],
      "env": {
        "SQLITE_DATABASE_PATH": "/home/runner/work/goblin-camp/goblin-camp/data/saves.db"
      }
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "time": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-time"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-memory"
      ]
    }
  }
}